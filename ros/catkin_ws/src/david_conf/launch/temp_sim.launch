<launch>
  <arg name="robot_path" />

	<node pkg="tf" type="static_transform_publisher" name="base2laser" args="0 0 0 3.14159 3.14159 0 base_link /$(arg robot_path)/Hokuyo_URG_04LX 100" />
	 
	<node pkg="tf" type="static_transform_publisher" name="odom2baselink" args="0 0 0 0 0 0 odom base_link 100" />
	
	<node pkg="base_controller" type="base_controller" name="base_controller_node" args=" $(arg robot_path) /cmd_vel" />
	<!-- <node pkg="nav_dummy" type= "nav_dummy" name="nav_dummy_node" args=" /cmd_vel" /> -->
	
	<node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen" >

	<param name="pub_map_odom_transform" value="true"/>
	<param name="map_frame" value="map" />
	<param name="base_frame" value="base_link" />
	<param name="odom_frame" value="odom" />
	<param name="map_size" value="4096" />
	<param name="scan_topic" value="$(arg robot_path)/Hokuyo_URG_04LX/laser_scan" />
	<!-- <param name="map_pub_period" value="2.00" /> -->

</node>



</launch>
